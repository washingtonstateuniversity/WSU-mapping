<script type="text/javascript">
  var availableTags = [$!locations];
</script>

<div id="dialog" title="Basic dialog" style="display:none;">
  <p>Choose the new state of the place</p>
</div>

<h3>Taging</h3>




<div id="tabs" class="placelist ui-tabs ui-widget ui-widget-content ui-corner-all">
  <ul class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
    <li class="ui-state-default ui-corner-top ui-tabs-selected ui-state-active">
      <a href="#tabs-1">Tags ($tags.TotalItems)</a>
    </li>
    <li class="ui-state-default ui-corner-top">
      <a href="#tabs-2">User Tags ($usertags.TotalItems)</a>
    </li>
  </ul>


  <div id="tabs-1">
<p>
<a href="new.castle">Create tags</a>
</p>
<table width="60%" border="0" style="float:right;margin-right:5px;margin-top:7px;">
  <tr>
    <td>Showing $tags.FirstItem - $tags.LastItem of $tags.TotalItems</td>
    <td align="right">
      #if($tags.HasPrevious) $tags.CreatePageLink( 1, "first",null, "%{searchId=$!searchId,status='draft'}" )  #end
      #if(!$tags.HasPrevious) first #end
      #if($tags.HasPrevious) | $tags.CreatePageLink( $tags.PreviousIndex, "prev",null, "%{searchId=$!searchId,status='draft'}" )  #end
      #if(!$tags.HasPrevious) | prev #end
      #if($tags.HasNext) | $PaginationHelper.CreatePageLink( $tags.NextIndex, "next",null, "%{searchId=$!searchId,status='draft'}" )  #end
      #if(!$tags.HasNext) | next #end
      #if($tags.HasNext) | $PaginationHelper.CreatePageLink( $tags.LastIndex, "last",null, "%{searchId=$!searchId,status='draft'}" )  #end
      #if(!$tags.HasNext) | last #end
    </td>
  </tr>
</table>
<table width="100%" border="1" cellpadding="2" cellspacing="0">
<tr>
    <th>Id</th>
    <th>Name</th>
    <th>&nbsp;</th>
</tr>

#foreach($tag in $tags)
<tr>
    <td align="center">$!tag.id</td>
    <td align="center">$!tag.Name</td>
    <td align="center">
        <a href="edit.castle?id=$!{tag.id}">Edit</a> | 
        <a href="delete.castle?id=$!{tag.id}">Delete</a>
    </td>
    

</tr>
#end
</table>
  </div>

  <div id="tabs-2">
    #parse("/tags/usertags/list.vm")
  </div>
</div>

