<table width="60%" border="0" style="float:right;margin-right:5px;margin-top:7px;">
  <tr>
    <td>Showing $draftPlaces.FirstItem - $draftPlaces.LastItem of $draftPlaces.TotalItems</td>
    <td align="right">
      #if($draftPlaces.HasPrevious) $PaginationHelper.CreatePageLink( 1, "first",null, "%{searchId=$!searchId,status='draft'}" )  #end
      #if(!$draftPlaces.HasPrevious) first #end
      #if($draftPlaces.HasPrevious) | $PaginationHelper.CreatePageLink( $draftPlaces.PreviousIndex, "prev",null, "%{searchId=$!searchId,status='draft'}" )  #end
      #if(!$draftPlaces.HasPrevious) | prev #end
      #if($draftPlaces.HasNext) | $PaginationHelper.CreatePageLink( $draftPlaces.NextIndex, "next",null, "%{searchId=$!searchId,status='draft'}" )  #end
      #if(!$draftPlaces.HasNext) | next #end
      #if($draftPlaces.HasNext) | $PaginationHelper.CreatePageLink( $draftPlaces.LastIndex, "last",null, "%{searchId=$!searchId,status='draft'}" )  #end
      #if(!$draftPlaces.HasNext) | last #end
    </td>
  </tr>
</table>
<ul class="placelistUL list_1">

  #foreach($place in $draftPlaces)
  #* set up authors*#
  #set($authors='')
  #capturefor(authors)
  #foreach ($author in $place.Authors)
  #each
  <span class="emailCol" rel="$!author.id">$!author.Name</span>
  #between
  /
  #end
  #end
  #* EOF set up  *#

  <li class="ui-widget-content ui-corner-all place_$!place.id con">
    #if($place.editing.name!="" && $place.editing.name != $user.name)<span class="UinEdit ui-corner-bottom">
      &nbsp;&nbsp;&nbsp;$place.editing.name is editing this Place <a href="#" title="Published" rel="$place.id" class="buttons steal ui-button ui-widget ui-state-default ui-corner-all">
        <span class="ui-icon ui-icon-unlocked"> </span> Click to Release Place</a>
    </span><div class="inEdit ui-corner-all"> </div>#end
    <div class="place_aTar place_$!place.id" title="$!place.id">
      <div class='summaryCol'>
        <ul>
          #if($place.Title)<li class='Title'>
            <span>Title: </span>$!place.Title
          </li>#end
          #if($authors!='')<li class='Authors'>
            <span>Authors: </span>$authors
          </li>#end
          #if($place.Teaser)<li class='Teaser'>
            <span>Teaser: </span>
            <span class="Teaser">
              $Text.Fold($Controller.StripHtml($!place.Teaser,false),200)<br/>
            </span>
            <a href="$!siteroot/place/readmore.castle?id=$!{place.id}">more</a>
          </li>#end
          #if($place.BodyText)<li class="Body">
            <span>Body: </span>
            <span class="Body">$Text.Fold($Controller.StripHtml($!place.BodyText,false),100)</span>
            <a href="$!siteroot/place/readmore.castle?id=$!{place.id}">more</a>
          </li>#end
        </ul>
      </div>
      <div class='detailCol'>
        <ul>
          #if($place.Publishtime)<li class='date'>
            <span>Date: </span>$!place.Publishtime.ToString().Replace('12:00:00 AM','')
          </li>#end
          #if($place.Status.Title)<li class='Status'>
            <div>
              <span>Status: </span>$!place.Status.Title
            </div>
          </li>#end
          #if($place.BreakingNews)<li>
            <span>Breaking: </span>$!place.BreakingNews
          </li>#end
          #if($place.Hottopic)<li>
            <span>Hottopic: </span>$!place.Hottopic
          </li>#end
          #*#if($place.Location)<li>
            <span>Location: </span>$!place.Location
          </li>#end*#
          #if($place.PlaceType.Name)<li>
            <span>Type: </span>$!place.PlaceType.Name
          </li>#end
          #if($place.id)<li>
            <span>Id: </span>$!place.id
          </li>#end
        </ul>
      </div>
      <div class='actionCol'>
        <ul>
          #if($Controller.canEdit($place,$user.id) || $place.editing == $user || $place.isCheckedOutNull())
          <li>
            <a href="#if($place.editing=="" || $place.editing == $user)$siteroot/place/Edit_place.castle?id=$!{place.id} #else # #end" title="#if($place.CheckedOutBy)Is being edited by $place.CheckedOutBy.name #else Edit #end" class="buttons editIt ui-button ui-widget ui-state-default ui-corner-all ">
              <span class="ui-button-icon-primary ui-icon ui-icon-pencil"> </span>
              <span class="actionText">Edit</span>
              <span class="actionpropt">&#187;</span>
            </a>
          </li>
          <li>
            <a href="$siteroot/place/delete.castle?id=$!{place.id}" title="Delete"  class="buttons ui-button ui-widget ui-state-default ui-corner-all ">
              <span class="ui-button-icon-primary ui-icon ui-icon-trash"> </span>
              <span class="actionText">Delete</span>
              <span class="actionpropt">&#187;</span>
            </a>
          </li>
          #end
          #if($Controller.canPublish($user))
          <li>
            <a href="$siteroot/place/setStatus.castle?id=$!{place.id}" title="Published" class="buttons pubState ui-button ui-widget ui-state-default ui-corner-all">
              <span class="ui-button-icon-primary ui-icon ui-icon-star"> </span>
              <span class="actionText">Status</span>
              <span class="actionpropt">&#187;</span>
            </a>
          </li>
          #end
          <li>
            <a href="$siteroot/read/${place.CustomUrl}" target="_blank" title="View" class="buttons ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
              <span class="ui-button-icon-primary ui-icon ui-icon-search"> </span>
              <span class="actionText">View</span>
              <span class="actionpropt">&#187;</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </li>
  #end
</ul>


<table width="60%" border="0" >
  <tr>
    <td>Showing $draftPlaces.FirstItem - $draftPlaces.LastItem of $draftPlaces.TotalItems</td>
    <td align="right">
      #if($draftPlaces.HasPrevious) $PaginationHelper.CreatePageLink( 1, "first",null, "%{searchId=$searchId,status='draft'}" ) #end
      #if(!$draftPlaces.HasPrevious) first #end
      #if($draftPlaces.HasPrevious) | $PaginationHelper.CreatePageLink( $draftPlaces.PreviousIndex, "prev",null, "%{searchId=$searchId,status='draft'}" ) #end
      #if(!$draftPlaces.HasPrevious) | prev #end
      #if($draftPlaces.HasNext) | $PaginationHelper.CreatePageLink( $draftPlaces.NextIndex, "next",null, "%{searchId=$searchId,status='draft'}" ) #end
      #if(!$draftPlaces.HasNext) | next #end
      #if($draftPlaces.HasNext) | $PaginationHelper.CreatePageLink( $draftPlaces.LastIndex, "last",null, "%{searchId=$searchId,status='draft'}" ) #end
      #if(!$draftPlaces.HasNext) | last #end
    </td>
  </tr>
</table>