<ul id='main_nav'>
	#foreach($item in $menuItems)
		#if($lastLevel == ${item.level} && $liOpen=="true" && $c>0)
			</li>
		#end
		#if($lastLevel > ${item.level} && $ulOpen=="true")
			#set($deepth=${lastLevel}-${item.level})
			$Controller.repeatStr("</li></ul>",$deepth)
			#set($ulOpen="false")
		#end
		#if($lastLevel != ${item.level} && $c>0)
			#if($lastLevel < ${item.level})
				<ul class='$subULClass'><li class='$subNarrowClass'>Narrow view to:</li>#set($ulOpen="true")
			#end
		#end
		
		<li class='#if($item.level==1) $baseClass #elseif($item.level>1) $subClass #end' ><a href="?cat[]=$!item.name.Replace("&","__")">$!item.name</a>

		#*$Controller.repeatStr("- ",$cat.level)*#
		#set($lastLevel=${item.level})
		#set($liOpen="true")
		#set($c=$c+1)
	#end
		#if($ulOpen=="true")</li></ul>#end
		</li>
	<li class='$baseClass' ><br/></li>
	<li class='$baseClass' ><a href="?cat=Virtual%20Tours">Virtual Tours</a></li>
	<li class='$baseClass' ><a href="?cat=Printable%20PDF%20Maps">Printable PDF Maps</a></li>
</ul>

