#macro(photo $photo)
	<div class="result_pod">
		<a href="photo.castle?id=$photo.id"><img width="130px" src="$siteroot/image/download.castle?id=$photo.thumbimage.id" alt="" /></a>
		<div class="pod_content">
			<h2 class="info-title">$!photo.name</h2>
			<p class="date">$!photo.getDate()</p>
			<p class="desc">$!photo.Caption</p>
		</div>
	</div>
#end

