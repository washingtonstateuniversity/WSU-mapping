
	<table width="50%" border="0" class="pagination" style="float:right;margin-right:5px;margin-top:7px;">
	  <tr>
		<td>Showing $fields.FirstItemIndex - $fields.LastItemIndex of $fields.TotalItems</td>
		<td align="right">
		  #if($fields.HasPrevious) $PaginationHelper.CreatePageLink( 1, "first", null, "%{target='fields'}" ) #end
		  #if(!$fields.HasPrevious) first #end
		  #if($fields.HasPrevious) | $PaginationHelper.CreatePageLink( $fields.PreviousIndex, "prev", null, "%{target='fields'}" ) #end
		  #if(!$fields.HasPrevious) | prev #end
		  #if($fields.HasNext) | $PaginationHelper.CreatePageLink( $fields.NextIndex, "next", null, "%{target='fields'}" ) #end
		  #if(!$fields.HasNext) | next #end
		  #if($fields.HasNext) | $PaginationHelper.CreatePageLink( $fields.LastIndex, "last", null, "%{target='fields'}" ) #end
		  #if(!$fields.HasNext) | last #end
		</td>
	  </tr>
	</table>

	<table  width="100%" class="ui-widget ui-widget-content">
	  <thead>
		<tr class="ui-widget-header ">
		<th>Name</th>
		<th style="width:75px;">&nbsp;</th>
		</tr>
	  </thead>
	  <tbody>
		#set ($c=0)
		#foreach($field in $fields)
			<tr class="#if($c%2>0) even #else odd #end #if($field.adminRead==false) ui-state-highlight #end ">
			  <td><a href="edit_field.castle?id=$!{field.id}" title="Edit" class="name">
					$field.name
				  </a></td>
			  <td>
				<span style='font-size:0.7em;'>
				  <a href="edit_field.castle?id=$!{field.id}" title="Edit" class="buttons ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
					<span class="ui-icon ui-icon-pencil"></span>
				  </a>
				  <a href="delete_field.castle?id=$!{field.id}" title="Delete" class="buttons ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
					<span class="ui-icon ui-icon-trash"></span>
				  </a>
				</span>
			  </td>
			</tr>
			#set ($c=$c+1)
		#end
	  </tbody>
	</table>
	<table width="50%" border="0"  class="pagination" >
	  <tr>
		<td>Showing $fields.FirstItem - $fields.LastItem of $fields.TotalItems</td>
		<td align="right">
		  #if($fields.HasPrevious) $PaginationHelper.CreatePageLink( 1, "first", null, "%{target='fields'}" ) #end
		  #if(!$fields.HasPrevious) first #end
		  #if($fields.HasPrevious) | $PaginationHelper.CreatePageLink( $fields.PreviousIndex, "prev", null, "%{target='fields'}" ) #end
		  #if(!$fields.HasPrevious) | prev #end
		  #if($fields.HasNext) | $PaginationHelper.CreatePageLink( $fields.NextIndex, "next", null, "%{target='fields'}" ) #end
		  #if(!$fields.HasNext) | next #end
		  #if($fields.HasNext) | $PaginationHelper.CreatePageLink( $fields.LastIndex, "last", null, "%{target='fields'}" ) #end
		  #if(!$fields.HasNext) | last #end
		</td>
	  </tr>
	</table>
